<jaxb:bindings xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               jaxb:version="2.1">
    <!-- Set default package for schemas -->
    <jaxb:bindings schemaLocation="ByNameDataSet.xsd" node="/xs:schema">
        <jaxb:schemaBindings>
            <jaxb:package name="com.example.byname"/>
        </jaxb:schemaBindings>
    </jaxb:bindings>

    <jaxb:bindings schemaLocation="QueryByName_DataSet.xsd" node="/xs:schema">
        <jaxb:schemaBindings>
            <jaxb:package name="com.example.querybyname"/>
        </jaxb:schemaBindings>
    </jaxb:bindings>
</jaxb:bindings>
